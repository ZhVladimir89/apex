/*
 * Include common MIMXRT1050-EVK configuration
 */
include machine/nxp/mimxrt1050-evk/conf/common

/*
 * Memory layout for hyperflash boot
 */
memory ROM_BASE		0x60000000
memory ROM_SIZE		0x4000000
memory LOADER_OFFSET	0x1080	    // vector table must be 128-byte aligned
memory LOADER_ROM_BASE	(CONFIG_ROM_BASE_PHYS + CONFIG_LOADER_OFFSET)
memory LOADER_ROM_SIZE	(CONFIG_ROM_SIZE - CONFIG_LOADER_OFFSET)

/*
 * Build hyperflash image for MIMXRT1050-EVK board
 */
mk machine/nxp/mimxrt1050-evk/image/hyperflash.mk
