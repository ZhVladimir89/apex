#
# Kernel
#
memory PAGE_OFFSET	0x80000000
memory UMEM_MAX		0x80000000

#
# Memory layout. All addresses are virtual.
#
memory RAM_SIZE		0x8000000
memory ROM_SIZE		0x4000000
memory VECTORS_SIZE	0x1000
memory INTSTACK_SIZE	0x1000
memory SYSSTACK_SIZE	0x1000
memory ABTSTACK_SIZE	0x1000
memory BOOTSTACK_SIZE	0x1000
memory BOOTPGD_SIZE	0x4000
memory BOOTPTE0_SIZE	0x1000
memory BOOTPTE1_SIZE	0x1000
memory LOADER_RAM_SIZE	0x1000

memory ROM_BASE		0x80000000
memory RAM_BASE		0xC0000000
memory VECTORS_BASE	CONFIG_RAM_BASE_VIRT
memory INTSTACK_BASE	(CONFIG_VECTORS_BASE_VIRT + CONFIG_VECTORS_SIZE)
memory SYSSTACK_BASE	(CONFIG_INTSTACK_BASE_VIRT + CONFIG_INTSTACK_SIZE)
memory ABTSTACK_BASE	(CONFIG_SYSSTACK_BASE_VIRT + CONFIG_SYSSTACK_SIZE)
memory BOOTSTACK_BASE	(CONFIG_ABTSTACK_BASE_VIRT + CONFIG_ABTSTACK_SIZE)
memory BOOTPGD_BASE	(CONFIG_BOOTSTACK_BASE_VIRT + CONFIG_BOOTSTACK_SIZE)
memory BOOTPTE0_BASE	(CONFIG_BOOTPGD_BASE_VIRT + CONFIG_BOOTPGD_SIZE)
memory BOOTPTE1_BASE	(CONFIG_BOOTPTE0_BASE_VIRT + CONFIG_BOOTPTE0_SIZE)
memory LOADER_RAM_BASE	(CONFIG_BOOTPTE1_BASE_VIRT + CONFIG_BOOTPTE1_SIZE)
memory KERNEL_BASE	(CONFIG_LOADER_RAM_BASE_VIRT + CONFIG_LOADER_RAM_SIZE)

#
# General options
#
option DIAG_SERIAL
option USTACK_SIZE	0x1000	    # Initial user stack size

#
# Device drivers
#
driver dev/null			    # NULL device
driver dev/ramdisk		    # RAM disk
driver dev/tty			    # Text terminal
driver dev/zero			    # Zero device
driver dev/arm/serial/pl011	    # PL011 UART

#
# CPU
#
cpu arm/cortex-a15

#
# QEMU command line
#
option QEMU_CMD qemu-system-arm -nographic -machine virt-2.10 -bios

#
# Pretty machine name
#
option MACHINE_NAME QEMU 2.10 ARM Virtual Machine
